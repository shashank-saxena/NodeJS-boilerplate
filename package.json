{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "sample structure to use in node js projects",
  "main": "index.js",
  "engines": {
    "node": "=8.11.1",
    "npm": "=5.8.0"
  },
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "check-version": "node ./validate-environment",
    "eslint": "eslint *.js",
    "build": "npm run check-version && npm run eslint",
    "dev": "npm run build && NODE_ENV=development node --inspect index",
    "stage": "npm run build && NODE_ENV=staging node index",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node index"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git@github-newput:shashank-saxena/NodeJS-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "boilerplate"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^4.19.1"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-validation": "^1.0.2",
    "joi": "^13.1.2",
    "jsonapi-serializer": "^3.5.6",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "semver": "^5.5.0",
    "winston": "^2.4.1"
  }
}
