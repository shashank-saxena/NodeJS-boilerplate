{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "sample structure to use in node js projects",
  "main": "index.js",
  "engines": {
    "node": "=8.11.1",
    "npm": "=5.8.0"
  },
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "check-version": "node ./validate-environment",
    "transpile": "babel src/ -d build/",
    "flow-check": "flow status",
    "build": "npm run flow-check && npm run transpile",
    "dev": "npm run check-version && npm run build && NODE_ENV=development node --inspect index",
    "stage": "npm run check-version && npm run build && NODE_ENV=staging node index",
    "prestart": "npm run check-version && npm run build",
    "start": "NODE_ENV=production node index"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git@github-newput:shashank-saxena/NodeJS-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "boilerplate"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.69.0"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "jsonapi-serializer": "^3.5.6",
    "semver": "^5.5.0",
    "winston": "^2.4.1"
  }
}
