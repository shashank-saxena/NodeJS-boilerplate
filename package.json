{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "sample structure to use in node js projects",
  "main": "app-server.js",
  "engines": {
    "node": "=8.11.1",
    "npm": "=5.8.0"
  },
  "private": true,
  "scripts": {
    "commitmsg": "node scripts/js/commit-message --gitParams=$GIT_PARAMS",
    "precommit": "node scripts/js/pre-commit",
    "prepush": "node scripts/js/pre-push",
    "postcheckout": "node scripts/js/post-checkout",
    "postmerge": "node scripts/js/post-merge",
    "test": "mocha ./test --recursive",
    "check-version": "node ./validate-environment",
    "eslint": "eslint *.js",
    "build": "run-s check-version eslint",
    "dev": "npm run build && NODE_ENV=development node --inspect app-server",
    "stage": "npm run build && NODE_ENV=staging node app-server",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node app-server"
  },
  "directories": {},
  "repository": {
    "type": "git",
    "url": "git@github-newput:shashank-saxena/NodeJS-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "boilerplate"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "chai": "~3.2.0",
    "chai-http": "~1.0.0",
    "chalk": "~2.4.0",
    "eslint": "~4.19.1",
    "eslint-plugin-filenames": "github:shashank-saxena/eslint-plugin-filenames",
    "eslint-plugin-json": "~1.2.0",
    "husky": "~0.14.3",
    "mocha": "~5.1.1",
    "npm-run-all": "~4.1.2",
    "yaml-lint": "~1.2.3",
    "yargs": "~11.0.0"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "dotenv": "~5.0.1",
    "express": "~4.16.3",
    "express-validation": "~1.0.2",
    "express-validator": "~5.1.2",
    "joi": "~13.1.2",
    "jsonapi-serializer": "~3.5.6",
    "jsonwebtoken": "~8.2.1",
    "request": "~2.85.0",
    "request-promise": "~4.2.2",
    "semver": "~5.5.0",
    "sequelize": "~4.37.6",
    "sequelize-cli": "~4.0.0",
    "shelljs": "~0.8.1",
    "winston": "~2.4.1"
  }
}
